				Do Until sceneRewardPosition = False
					Tap sceneRewardPosition(0), sceneRewardPosition(1)
					Delay WAIT_NORMAL
					Tap screenWidth / 2, screenHeight * 0.8
					sceneRewardPosition = yysLib.findSceneReward()
				Loop
